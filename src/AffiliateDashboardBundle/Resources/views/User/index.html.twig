{% extends 'base.html.twig' %}

{% block body %}
    <h1>User list</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>
                    <a type="button" class="btn btn-primary" href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                    <a type="button" class="btn btn-info" href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
