{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tag list</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Sales</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>
                    <span class="label label-default">{{ tag.sales|length }} sales</span>
                    <span class="label label-success">{{ tag.sales|propertySum('earnings')|localizedcurrency('EUR') }} earned</span>
                </td>
                <td>
                    <a type="button" class="btn btn-info" href="{{ path('tag_edit', { 'id': tag.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
