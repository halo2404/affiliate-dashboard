{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sale</h1>

    <table class="table table-hover table-condensed">
        <tbody>
            <tr>
                <th>Asin</th>
                <td>{{ sale.asin }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ sale.category }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if sale.date %}{{ sale.date|localizeddate('medium', 'none') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ sale.rate|localizednumber }}%</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ sale.qty|localizednumber }}</td>
            </tr>
            <tr>
                <th>Revenue</th>
                <td>{{ sale.revenue|localizedcurrency('EUR') }}</td>
            </tr>
            <tr>
                <th>Earnings</th>
                <td>{{ sale.earnings|localizedcurrency('EUR') }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ sale.affiliateTag.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ sale.title }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sale_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
