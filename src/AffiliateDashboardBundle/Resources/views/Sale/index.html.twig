{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sale list</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Asin</th>
                <th>Date</th>
                <th>Earnings</th>
                <th>Rate</th>
                <th>Qty</th>
                <th>Revenue</th>
                <th>Tag</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.asin }}</td>
                <td>{% if sale.date %}{{ sale.date|localizeddate('medium', 'none') }}{% endif %}</td>
                <td>{{ sale.earnings|localizedcurrency('EUR') }}</td>
                <td>{{ sale.rate }}</td>
                <td>{{ sale.qty }}</td>
                <td>{{ sale.revenue|localizedcurrency('EUR') }}</td>
                <td>{{ sale.tag }}</td>
                <td>{{ sale.title }}</td>
                <td><a href="{{ path('sale_show', { 'id': sale.id }) }}">show</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
