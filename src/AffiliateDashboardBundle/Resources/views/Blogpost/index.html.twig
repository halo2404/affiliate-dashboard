{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blogpost list</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Title</th>
                <th>Published at</th>
                <th>Tag</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blogpost in blogposts %}
            <tr>
                <td>{{ blogpost.title }}</td>
                <td>{% if blogpost.publishedAt %}{{ blogpost.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ blogpost.affiliateTag }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ blogpost.url }}">open blogpost</a>
                        </li>
                        <li>
                            <a href="{{ path('blogpost_show', { 'id': blogpost.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blogpost_edit', { 'id': blogpost.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
