{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blogpost list</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Title</th>
                <th>Published at</th>
                <th>Tag</th>
                <th>Sales</th>
                <th>Users</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blogpost in blogposts %}
            <tr>
                <td>{{ blogpost.title }}</td>
                <td>{% if blogpost.publishedAt %}{{ blogpost.publishedAt|localizeddate('medium', 'none') }}{% endif %}</td>
                <td>{{ blogpost.affiliateTag }}</td>
                <td>
                    <span class="label label-default">{{ blogpost.affiliateTag.sales|length }} sales</span>
                    <span class="label label-success">{{ blogpost.affiliateTag.sales|propertySum('earnings')|localizedcurrency('EUR') }} earned</span>
                </td>
                <td>
                    {% for bu in blogpost.blogpostUser %}
                        <span class="label label-default">{{ bu.user.name }} - {{ bu.percentage }}%</span>
                    {% endfor %}
                </td>
                <td>
                    <a type="button" class="btn btn-default" href="{{ blogpost.url }}">open blogpost</a>
                    <a type="button" class="btn btn-primary" href="{{ path('blogpost_show', { 'id': blogpost.id }) }}">show</a>
                    <a type="button" class="btn btn-info" href="{{ path('blogpost_edit', { 'id': blogpost.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
