{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{% trans %}Create Blogpost{% endtrans %}</h1>
    </div>

    {{ form_start(form, { 'style': 'horizontal' }) }}
        {{ form_widget(form) }}

        <p>
            <input type="submit" value="{% trans %}create{% endtrans %}" class="btn btn-primary" />
        </p>
    {{ form_end(form) }}

    <p>
        <a class="btn btn-default btn-xs" href="{{ path('blogpost_index') }}">{% trans %}back to the list{% endtrans %}</a>
    </p>
{% endblock %}
