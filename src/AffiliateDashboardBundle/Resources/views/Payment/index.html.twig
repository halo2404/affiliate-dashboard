{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{% trans %}Payments{% endtrans %}</h1>
    </div>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>{% trans %}Date{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Revenue{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.date|localizeddate('medium', 'none') }}</td>
                <td>{{ payment.user.name }}</td>
                <td>{{ payment.amount|localizedcurrency('EUR') }}</td>
                <td>
                    <a class="btn btn-info btn-sm" href="{{ path('payment_show', { 'id': payment.id }) }}">{% trans %}show{% endtrans %}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}